<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="vertical">
  	<TextView 
		android:text="Tipo" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
	/>
	<Spinner 
		android:id="@+id/tipos_dispositivos" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center"
	/>
	<TextView 
		android:text="Dispositivo" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
	/>
	<Spinner 
		android:id="@+id/escolher_dispositivos" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center"
	/>
	<TextView 
		android:text="Horários" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
	/>
	<Button 
		android:id="@+id/addBtnIni" 
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:text="Horário Inicial"
		android:layout_gravity="center"
	/>
	<Button 
		android:id="@+id/addBtnFim" 
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:text="Horário Final"
		android:layout_gravity="center"
	/>
	<TextView 
	    android:id="@+id/TextView03"
		android:text="Valor Inicial" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
	/>
	<SeekBar 
		android:id="@+id/editValorIni" 
		android:layout_height="fill_parent" 
		android:layout_width="200dp"
		android:paddingLeft="8dp"
		android:paddingRight="20dp"
		android:layout_gravity="center"
	/>
	<TextView 
	    android:id="@+id/TextView04" 
		android:text="Valor Final" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
		android:layout_marginTop="5dp"
	/>
	<SeekBar 
		android:id="@+id/editValorFinal" 
		android:layout_height="fill_parent" 
		android:layout_width="200dp"
		android:paddingLeft="8dp"
		android:paddingRight="20dp"
		android:layout_gravity="center"
	/>
</LinearLayout>
</ScrollView>
